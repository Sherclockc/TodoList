.container {
  padding: 30rpx;
  min-height: 100vh;
  background-color: var(--bg-color);
  color: var(--text-color);
  box-sizing: border-box;
}
.container.dark{
  background-color: var(--bg-color);
  color: var(--text-color);
}

.theme-btn {
  background-color: transparent;
  color: var(--active-color);
  font-size: 30rpx;
  margin-bottom: 20rpx;
}

.input-box {
  display: flex;
  margin-bottom: 30rpx;
}

input {
  flex: 1;
  border: 2rpx solid var(--active-color);
  border-radius: 10rpx;
  padding: 15rpx;
  background-color: var(--input-bg);
  color: var(--text-color);
}

.add-btn {
  background-color: var(--active-color);
  color: #fff;
  border-radius: 10rpx;
  padding: 15rpx 30rpx;
  height: 90rpx;
  margin-left: 10rpx;
  line-height: 55rpx;
}

.filters {
  display: flex;
  justify-content: space-around;
  margin-bottom: 30rpx;
}

.filters button {
  padding: 10rpx 20rpx;
  border: 2rpx solid var(--active-color);
  border-radius: 8rpx;
  color: var(--active-color);
  background-color: transparent;
  height: 90rpx;
  line-height: 60rpx;
}

.filters button.active {
  background-color: var(--active-color);
  color: white;
}

.task {
  display: flex;
  justify-content: space-between;
  background-color: var(--task-bg);
  padding: 20rpx;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
  transition: all 0.3s ease;
}

.task text {
  flex: 1;
  font-size: 40rpx;
}

.task.done text {
  text-decoration: line-through;
  color: #aaa;
  transition: color 0.3s ease, text-decoration 0.3s ease;
}

.task:hover {
  background-color: #eeeeee;
}

.del-btn {
  background-color: red;
  color: white;
  border-radius: 10rpx;
  padding: 10rpx 20rpx;
  height: 90rpx;
  line-height: 60rpx;
}

.fade-out {
  opacity: 0;
  transition: all 0.3s ease;
}

.empty {
  text-align: center;
  color: #aaa;
  margin-top: 60rpx;
  font-size: 28rpx;
}
